# Configuration for the mover script
Paths:
  CACHE_PATH: "{{ cache_mount_path }}/cache01" # The path to your cache directory.
  BACKING_PATH: "{{ media_cold }}" # The path to the backing storage pool where files will be moved.
  LOG_PATH: "{{ cache_mover_log_path }}" # The path for the log file generated by the script.

Settings:
  THRESHOLD_PERCENTAGE: "{{ cache_mover_threshold_percentage }}" # The usage percentage of the cache directory that triggers the file-moving process.
  TARGET_PERCENTAGE: "{{ cache_mover_target_percentage }}" # The target usage percentage to achieve after moving files.
  MAX_WORKERS: "{{ cache_mover_max_workers }}" # The maximum number of parallel file-moving operations.
  MAX_LOG_SIZE_MB: "{{ cache_mover_max_log_size_mb }}" # The maximum size for the log file before it's rotated.
  BACKUP_COUNT: "{{ cache_mover_log_backup_count }}" # The number of backup log files to maintain.
  USER: "{{ cache_mover_user }}" # The username that should have ownership of the files.
  GROUP: "{{ cache_mover_group }}" # The group that should have ownership of the files.
  FILE_CHMOD: '{{ cache_file_chmod }}'  # The permissions to set for the above user/group on all files moved.
  DIR_CHMOD: '{{ cache_folder_chmod }}' # The permissions to set for the above user/group on all directories created.