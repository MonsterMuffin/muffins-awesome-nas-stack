# SnapRAID Configuration
{{ ansible_managed | comment }}
# DO NOT EDIT MANUALLY

# Parity Disks - Split File Configuration
parity {% for i in range(1, split_parity_files + 1) %}{{ parity_mount_path }}/parity01/snapraid-{{ i }}.parity{% if not loop.last %},{% endif %}{% endfor %}

{% for i in range(2, 7) %}
{% if i <= parity_disks|length %}
{{ i }}-parity {% for j in range(1, split_parity_files + 1) %}{{ parity_mount_path }}/parity{{ '%02d' % i }}/snapraid-{{ j }}.parity{% if not loop.last %},{% endif %}{% endfor %}
{% endif %}
{% endfor %}

# Content Files
{% for content_file in content_files %}
content {{ content_file }}
{% endfor %}

# Data Disks (btrfs data subvol)
{% for i in range(1, data_disks|length + 1) %}
data d{{ i }} {{ data_mount_path }}/data{{ '%02d' % i }}/
{% endfor %}

# Excludes hidden files and directories
nohidden

# Defines files and directories to exclude
exclude *.unrecoverable
exclude /tmp/
exclude /lost+found/
exclude *.!sync
exclude /.snapshots/

# Automatically save the state when syncing after the specified amount of GB processed
autosave 500